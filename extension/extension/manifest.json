{
  "manifest_version": 3,
  "name": "2GIS Bus occupancy monitoring",
  "description": "Это расширение интегрируется в веб-сайт 2ГИС, и показывает, как сильно заполнены автобусы на выбранном вами маршруте, используя данные с нашего API",
  "version": "1.0",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "permissions": [
    "webRequest",
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://eta.api.2gis.ru/*",
    "https://2gis.ru/*",
    "https://sleepserver.ru/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://2gis.ru/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://2gis.ru/*"]
    }
  ]
}
